<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<a><%= link_to "logout", logout_path, method: :delete %></a>

<%= gravatar_for @user, size: 200 %>
<% if logged_in? && @user == current_user %>
<h1 class="text-center mt-4"><%= link_to "edit your profile", edit_user_path(@user) %></h1>
<% end %>

<h1 class="text-center mt-4">Articles</h1>

<%=  render 'articles/article'  %>

<div class="apple_pagination">
    <%= will_paginate  @articlesIndex, :container => false %>
  </div>
